<!-- Header include -->
<%- include('../partials/header') %>


<section class="hero">
  <div class="hero-inner">
    <div class="hero-image">
      <img src="https://tse4.mm.bing.net/th/id/OIP.pqUsPkayiWmFNUeuV0wQYQHaEK?rs=1&pid=ImgDetMain&o=7&rm=3" alt="Job Search">
    </div>
    <div class="hero-content">
      <h1>Find Your Dream Job</h1>
      <p>We connect talented people with top companies. Explore new opportunities now.</p>
      <a href="#jobs" class="btn-primary">Browse Jobs</a>
    </div>
  </div>
</section>
<!-- Main Body -->
<div class="container" id="jobs">
  <h2>Available Jobs</h2>

  <div class="jobs-grid">
    <% jobs.forEach(job => { %>
      <div class="job-card">
        <img src="<%= job.companyLogo || '/default-logo.png' %>" alt="Company Logo">
        <h3><%= job.title %></h3>
        <p><%= job.companyName %></p>
         <a href="/job/<%= job._id %>">View Details</a>
      </div>
    <% }) %>
  </div>
</div>

<!-- Footer include (if you want) -->
<%- include('../partials/footer') %>
