<!-- Header include -->
<%- include('../partials/header') %>

<!-- Main Body -->
<div class="container">
  <h2>Available Jobs</h2>

  <div class="jobs-grid">
    <% jobs.forEach(job => { %>
      <div class="job-card">
        <img src="<%= job.companyLogo || '/default-logo.png' %>" alt="Company Logo">
        <h3><%= job.title %></h3>
        <p><%= job.companyName %></p>
         <a href="/job/<%= job._id %>">View Details</a>
      </div>
    <% }) %>
  </div>
</div>

<!-- Footer include (if you want) -->
<%- include('../partials/footer') %>
